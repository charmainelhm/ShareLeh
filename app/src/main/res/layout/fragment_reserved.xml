<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservedFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reservedListingRecView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/fragDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food you have reserved will be found here. Start saving some money by reserving some food item you need!"
        android:paddingHorizontal="15dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_gravity="center"/>
</FrameLayout>